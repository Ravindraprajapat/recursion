class Solution {
    List<List<Integer>> ans = new ArrayList<>();

    void combination(int[] nums , List<Integer> temp , int index , int k){
        if(k==0){
            ans.add(new ArrayList<>(temp));
            return;
        }

        if(index >= nums.length) return;
        
        int ele = nums[index];
        temp.add(ele);
        combination(nums,temp,index+1,k-1);
         temp.remove(temp.size()-1);
         combination(nums,temp,index+1,k);
    }

    public List<List<Integer>> combine(int n, int k) {
       int[] nums = new int[n];
       for(int i=0;i<n;i++){
        nums[i]=i+1;
       } 
       List<Integer> temp = new ArrayList<>();
      combination(nums, temp,0,k);
      return ans;
    }
}
